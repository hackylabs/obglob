{
  "name": "@hackylabs/obglob",
  "version": "1.0.0",
  "description": "Glob search an a nested object/array against patterns. Returns a copy of the original with only the matched properties included or excluded. Optionally modifies the values of the matched properties. Optionally flattens the result.",
  "private": false,
  "license": "MIT",
  "author": "Benjamin Green (https://bengreen.dev)",
  "funding": "https://ko-fi.com/hackylabs",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "keywords": [
    "glob",
    "object",
    "array",
    "search",
    "extract",
    "extraction",
    "object search",
    "object extraction",
    "object glob",
    "object pattern",
    "array search",
    "array extraction",
    "array glob",
    "array pattern",
    "glob flatten"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "build": "npm run lint && npm run test && npm run build:esm && npm run build:cjs && npm run update-readme && npm run update-license",
    "build:esm": "tsc --project tsconfig.esm.json && ./scripts/js-to-mjs.sh",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "bench": "npx vitest bench --watch=false",
    "bench:dev": "npx vitest bench",
    "test:dev": "npx vitest",
    "test": "npx vitest run",
    "update-readme": "npx ts-node ./scripts/update-readme.ts",
    "update-license": "npx ts-node ./scripts/update-license.ts"
  },
  "devDependencies": {
    "@types/micromatch": "4.0.9",
    "@types/node": "20.14.9",
    "@typescript-eslint/eslint-plugin": "7.14.1",
    "@typescript-eslint/parser": "7.14.1",
    "@vitest/coverage-v8": "1.6.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-mocha": "10.4.3",
    "eslint-plugin-n": "17.9.0",
    "eslint-plugin-promise": "6.2.0",
    "image-charts": "6.1.19",
    "prettier": "2.5.1",
    "typescript": "5.5.2",
    "vitest": "1.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hackylabs/obglob"
  },
  "bugs": {
    "url": "https://github.com/hackylabs/obglob/issues"
  },
  "dependencies": {
    "micromatch": "4.0.8",
    "safe-flat": "2.1.0"
  }
}
